# ------------------------------
# ComfyUI container settings
# ------------------------------
COMFY_IMAGE=comfyui:torch2.9
CONTAINER_NAME=comfyui
DOCKER_RESTART=unless-stopped

# Host IP/port for published ComfyUI web port
HOST_BIND_IP=0.0.0.0
COMFY_PORT=8188

# Path mounted into container (models, etc)
MODEL_MOUNT_SOURCE=/mnt/z
MODEL_MOUNT_TARGET=/mnt/z
EXTRA_MODEL_PATHS=/mnt/z

# ComfyUI runtime params
COMFY_LISTEN_IP=0.0.0.0
COMFY_EXTRA_ARGS=--enable-cors-header

# ------------------------------
# Optional SMB mount (WSL host-side)
# Set SMB_ENABLED=true to mount //SMB_SERVER/SMB_SHARE to SMB_MOUNT_POINT
# ------------------------------
SMB_ENABLED=false
SMB_SERVER=
SMB_SHARE=ai-models
SMB_MOUNT_POINT=/mnt/ai-models
SMB_USERNAME=srv
SMB_PASSWORD=
SMB_DOMAIN=
SMB_VERSION=3.0
SMB_READ_ONLY=true
SMB_UID=1000
SMB_GID=1000
