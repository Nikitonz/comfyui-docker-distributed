# ------------------------------
# ComfyUI container settings
# ------------------------------
COMFY_IMAGE=comfyui:torch2.9
CONTAINER_NAME=comfyui
DOCKER_RESTART=unless-stopped

# Host IP/port for published ComfyUI web port
HOST_BIND_IP=0.0.0.0
COMFY_PORT=8188

# Models mount used by docker-compose service:
# local path mode:   COMFY_MODELS_VOLUME=/mnt/z:/mnt/z
# smb volume mode:   COMFY_MODELS_VOLUME=comfy_models_smb:/mnt/z:ro
COMFY_MODELS_VOLUME=/mnt/z:/mnt/z
EXTRA_MODEL_PATHS=/mnt/z

# ComfyUI runtime params
COMFY_LISTEN_IP=0.0.0.0
COMFY_EXTRA_ARGS=--enable-cors-header

# ------------------------------
# Optional SMB mount handled by docker compose volume driver (cifs)
# To enable: set COMFY_MODELS_VOLUME=comfy_models_smb:/mnt/z:ro
# ------------------------------
SMB_SERVER=
SMB_SHARE=<your share point>
SMB_USERNAME=<username>
SMB_PASSWORD=<pass>
SMB_VERSION=3.0
SMB_MOUNT_FLAGS=ro
SMB_DOMAIN_OPT=
SMB_UID=1000
SMB_GID=1000
SMB_VOLUME_NAME=comfy_models_smb
